<Window x:Class="SortClass.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SortClass"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Logo.jpg"/>
        </Grid.Background>
        <Button x:Name="start" Content="НАЧАТЬ" HorizontalAlignment="Center" Margin="0,283,0,0" VerticalAlignment="Top" Height="44" Width="150" Background="#FF2716DC" Click="NextPage" FontSize="24" FontFamily="Times New Roman" FontWeight="Bold" Foreground="White" MouseEnter="ChangeColor" MouseLeave="ReturnColor"/>
    </Grid>

</Window>
